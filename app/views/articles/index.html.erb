<% provide(:title, 'All Articles') %>
<h1>Articles</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Brief text</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.name %></td>
        <td><%= article.brief_text %></td>
        <td>post<%= time_ago_in_words(article.created_at) %> ago</td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate %>
